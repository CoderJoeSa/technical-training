<record id="view_property_form" model="ir.ui.view">
    <field name="name">estate.property.form</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
        <form string="Property">
            <sheet>
                <group>
                    <field name="name"/>
                    <field name="property_type_id"/>
                    <field name="description"/>
                    <field name="bedrooms"/>
                    <field name="bathrooms"/>
                    <field name="state"/>
                    <field name="city"/>
                    <field name="price"/>
                    <field name="currency_id"/>
                    <field name="active"/>
                </group>
            </sheet>
        </form>
    </field>
</record>

<record id="action_property_form" model="ir.actions.act_window">
    <field name="name">Properties</field>
    <field name="res_model">estate.property</field>
    <field name="view_mode">tree,form</field>
    <field name="view_id" ref="view_property_form"/>
</record>

<menuitem id="menu_estate_property" name="Properties" parent="menu_estate" action="action_property_form"/>

